<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.room.backend.data.mapper.PermissionMapper">
    <resultMap id="BaseResultMap" type="com.room.backend.data.entity.Permission">
        <result column="id" jdbcType="INTEGER" property="id"></result>
        <result column="name" jdbcType="VARCHAR" property="name"></result>
    </resultMap>
    <select id="selectPermissionListByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select p.*
        from
            users_login as u
            left join roles as r
            on u.role_id = r.id
            left join role_permission_relation as rp
            on r.id = rp.role_id
            left join permissions as p
            on rp.permission_id = p.id
        where u.id = #{userId}
    </select>
</mapper>